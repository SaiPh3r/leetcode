class Solution {
public:
    void solve(vector<int>& candidates, int target ,int index ,  vector<vector<int>>&ans , vector<int>current , int sum){
        // base cases
        if(sum == target){
            ans.push_back(current);
            return;
        }
        if(sum > target || index == candidates.size()){
            return;
        }
        // include 
        current.push_back(candidates[index]);
        solve(candidates , target , index , ans , current , sum+candidates[index]);
        // exclude
        current.pop_back();
        solve(candidates , target , index+1 , ans , current , sum);

    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>>ans;
        vector<int>current;
        int i = 0;
        int sum = 0;
        solve(candidates , target , i , ans , current , sum);
        return ans;

    }
};

// redone 

class Solution {
public:
    void solve(vector<int>& candidates, int i ,int target , vector<int>&current , vector<vector<int>>&ans , int sum  ){
        // base case
        if(sum == target){
            ans.push_back(current);
            return;
        }
        if(sum>target|| i==candidates.size())return;

        //include
        current.push_back(candidates[i]);
        solve(candidates , i , target , current , ans , sum+ candidates[i]);

        //exclude
        current.pop_back();
        solve(candidates , i+1 , target , current , ans , sum);
    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        int i =0;
        vector<int>current;
        vector<vector<int>>ans;
        int sum=0;
        solve(candidates , i , target , current , ans , sum);
        return ans;
    }
};