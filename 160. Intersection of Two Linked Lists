/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *getIntersectionNode(ListNode *headA, ListNode *headB) {
        // approach hash map ka use krke pehli list ke values store kralu as true 
        // fir dusri ke liye agr pehle se exist krti h to return thr node nhi to return NULL;
        unordered_map<ListNode*,bool>mp;
        ListNode* temp = headA;
        while(temp!=NULL){
            mp[temp] =true;
            temp=temp->next;
        }// ab pehele list ke liye mp me true ho chuka h
        ListNode* temp2 = headB;
        while(temp2!=NULL){
            if(mp[temp2] == true){
                return temp2;
            }
            temp2 = temp2->next;
        }
        return NULL;  
    }
};