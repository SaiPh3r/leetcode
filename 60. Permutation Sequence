class Solution {
public:
    int count=0;
    string ans;
    void solve(int index , string current , int k){
        // base case
        if(ans!="") return;

        if(index == current.size()){
            count++;
            if(count == k){
                ans=current;
            }
            return;
        }

        // baki ab perm generate krwa lete h
        for(int i = index ;i<current.size();i++){
            swap(current[i], current[index]);
            sort(current.begin()+index+1 , current.end());

            solve(index+1 , current , k);

            // backtrack
            swap(current[i], current[index]);
        }
    }
    string getPermutation(int n, int k) {
        string s = "";
        for(int i = 1;i<=n;i++){
            s.push_back(char('0' + i));
        }
        solve(0 , s, k);
        return ans;
    }
};