class Solution {
public:
    bool is_pal(string str , int s , int e){
        while(s<=e){
            if(str[s] != str[e]){
                return false;
            }else{
                s++;
                e--;
            }
        } return true;
        
    }

    void solve(string s , int index , vector<string>path , vector<vector<string>>&ans){
        // base case
        if(index == s.size()){
            ans.push_back(path);
            return;
        }
        for(int i = index ;i<s.size();i++){
            if(is_pal(s , index , i)){
                // agr pal h to
                path.push_back(s.substr(index ,i-index+1));
                //push krne ke baad 
                solve(s , i+1 , path , ans);
                path.pop_back();
            }
            // pal nhi h

        }
    }
    vector<vector<string>> partition(string s) {
        vector<vector<string>>ans;
        vector<string>path;
        int index = 0;
        solve(s,index , path , ans);
        return ans;
    }
};