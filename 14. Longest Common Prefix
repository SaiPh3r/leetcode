class Solution {
public:
    string shortest_find(vector<string>& strs , string &shortest){
        for(int i=0; i<strs.size();i++){
            if(strs[i].size() < shortest.size()){
                shortest = strs[i];
            }
        }
        return shortest;
    }
    string longestCommonPrefix(vector<string>& strs) {
        string shortest = strs[0];
        shortest_find(strs ,shortest);
        for(int i=0; i<shortest.size();i++){
            char ch = shortest[i];
            // ab is ch ko baki strings se compare krna h
            for(int j=0; j<strs.size();j++){
                if(ch!= strs[j][i]){
                    return shortest.substr(0 , i);
                }
            }
             
        }
        return shortest;
    }
};